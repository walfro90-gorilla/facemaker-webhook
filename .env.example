# Variables de entorno para el Webhook Inteligente

# =====================================================
# üîß CONFIGURACI√ìN B√ÅSICA
# =====================================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# =====================================================
# üè¢ HUBSPOT CONFIGURATION
# =====================================================
HUBSPOT_TOKEN=your_hubspot_private_app_token_here
HUBSPOT_OWNER_ID=your_hubspot_owner_id_here

# =====================================================
# üíæ REDIS CONFIGURATION (Opcional)
# =====================================================
# Para cache persistente - si no se configura, usa solo memoria
REDIS_URL=redis://localhost:6379
# REDIS_URL=redis://username:password@hostname:port
# Para Redis Cloud: redis://default:password@hostname:port

# =====================================================
# üîí SEGURIDAD
# =====================================================
# Webhook signature secret (si ManyChat lo soporta)
WEBHOOK_SECRET=your_webhook_secret_here

# Origen permitido para CORS
ALLOWED_ORIGIN=https://manychat.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# =====================================================
# üìä MONITOREO Y M√âTRICAS
# =====================================================
# Habilitar m√©tricas detalladas
ENABLE_DETAILED_METRICS=true

# Intervalo de limpieza de m√©tricas (en ms)
METRICS_CLEANUP_INTERVAL=300000

# =====================================================
# üíæ CONFIGURACI√ìN DE CACHE
# =====================================================
# TTL por defecto para cache (en ms)
CACHE_DEFAULT_TTL=1800000

# Tama√±o m√°ximo del cache en memoria
CACHE_MAX_MEMORY_SIZE=1000

# Umbral de compresi√≥n (bytes)
CACHE_COMPRESSION_THRESHOLD=1024

# =====================================================
# üöÄ PERFORMANCE
# =====================================================
# Timeout para requests HTTP (en ms)
HTTP_TIMEOUT=30000

# M√°ximo n√∫mero de reintentos para HubSpot
HUBSPOT_MAX_RETRIES=3

# Delay base para reintentos (en ms)
HUBSPOT_RETRY_DELAY=1000

# Umbral del circuit breaker
CIRCUIT_BREAKER_THRESHOLD=5

# Timeout del circuit breaker (en ms)
CIRCUIT_BREAKER_TIMEOUT=30000

# =====================================================
# üìù LOGGING
# =====================================================
# Nivel de logging: error, warn, info, debug
LOG_LEVEL=info

# Formato de logs: json, simple
LOG_FORMAT=json

# =====================================================
# üß™ TESTING Y DESARROLLO
# =====================================================
# Habilitar endpoints de desarrollo
ENABLE_DEV_ENDPOINTS=true

# Simular delays para testing
SIMULATE_DELAYS=false

# =====================================================
# üì± MANYCHAT ESPEC√çFICO
# =====================================================
# URL base de ManyChat API (si se necesita)
MANYCHAT_API_URL=https://api.manychat.com

# Token de ManyChat (si se necesita para actualizaciones)
MANYCHAT_API_TOKEN=your_manychat_token_here

# =====================================================
# üè• MEDICINA EST√âTICA ESPEC√çFICO
# =====================================================
# Pipeline por defecto en HubSpot
DEFAULT_PIPELINE=default

# Stage por defecto para nuevos leads
DEFAULT_STAGE=new_inquiry

# Propietario por defecto para deals
DEFAULT_DEAL_OWNER=your_hubspot_user_id_here